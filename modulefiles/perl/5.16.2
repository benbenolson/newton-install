#%Module1.0#####################################################################
##
## perl modulefile
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads Python version $version\n"
}

module-whatis   "loads Python into the working environment."

# for Tcl script use only
set     topdir       /data/apps/perl
set     version      "5.16.2"

prepend-path PATH $topdir/$version/bin
prepend-path MANPATH $topdir/$version/man
prepend-path PERL5LIB $topdir/$version/lib/$version
prepend-path PERL5LIB $topdir/$version/lib/site_perl/$version/x86_64-linux


prepend-path PERL_LOCAL_LIB_ROOT $topdir/$version
prepend-path PERL_MB_OPT --install_base $topdir/$version
prepend-path PERL_MM_OPT INSTALL_BASE=$topdir/$version
prepend-path PERL5LIB $topdir/$version/lib/perl5


