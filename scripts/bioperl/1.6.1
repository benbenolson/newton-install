##
## bioperl modulefile
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads BioPython \n"
        puts stderr "\n\tVersion $version\n"
}

module-whatis   "loads BioPython into the working environment."

# for Tcl script use only
set     topdir       /data/apps/bioperl
set     version      "1.6.1"

module load perl/5.16.2
prepend-path PATH $topdir/$version/bin
prepend-path MANPATH $topdir/$version/man
prepend-path PERL5LIB $topdir/$version/lib/perl5
prepend-path PERL5LIB $topdir/$version/lib/x86_64-linux/auto


