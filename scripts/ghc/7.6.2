## modulefiles/ghc/6.12.3 
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads ghc version $version\n"
}

module-whatis   "loads ghc into the working environment."

# for Tcl script use only
set     topdir       /data/apps/ghc
set     version      "7.6.2"

prepend-path PATH $topdir/$version/bin
prepend-path LD_RUN_PATH $topdir/$version/lib
prepend-path LD_LIBRARY_PATH $topdir/$version/lib
prepend-path MANPATH $topdir/$version/share/man

