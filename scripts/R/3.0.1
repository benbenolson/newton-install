#%Module1.0#####################################################################

proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads R \n"
        puts stderr "\n\tVersion $version\n"
}

module-whatis   "loads R into the working environment."

# for Tcl script use only
set     topdir       /data/apps/R
set     version      "3.0.1"

prepend-path  PATH              $topdir/$version/bin
prepend-path  MANPATH           $topdir/$version/share/man
prepend-path  INCLUDE           $topdir/$version/lib64/R/include
prepend-path  LD_CONFIG_PATH    $topdir/$version/lib64/R/lib
