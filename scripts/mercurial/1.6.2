##
## mercurial modulefile
##
## modulefiles/murcurial. 
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads Mercurial 1.6.2"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"loads Mercurial 1.6.2 into the working environment."

# for Tcl script use only
set     topdir       /data/apps/mercurial
set     version      "1.6.2"

prepend-path  PATH              $topdir/$version/bin
prepend-path  MANPATH      $topdir/$version/share/man
prepend-path  PYTHONPATH   $topdir/$version/lib64/python2.4/site-packages/

