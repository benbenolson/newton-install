#%Module1.0#####################################################################
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads SQLite version $version\n"
}

module-whatis   "loads SQLite into the working environment."

# for Tcl script use only
set     topdir       /data/apps/sqlite
set     version      "3.7.6.3"

setenv SQLITE_INSTALLDIR $topdir/$version
prepend-path PATH $topdir/$version/bin
prepend-path LD_RUN_PATH $topdir/$version/lib
prepend-path MANPATH $topdir/$version/share/man


