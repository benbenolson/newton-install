#%Module1.0#####################################################################
##
## mvapich2 modulefile
##
## modulefiles/mvapich2. 
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads mvapich2 version $version \n"
}

module-whatis   "loads OpenMPI into the working environment."

conflict mvapich2
# for Tcl script use only
set     topdir       /data/apps/mvapich2
set     version      "1.8"

prepend-path  PATH              $topdir/$version/bin
prepend-path  MANPATH           $topdir/$version/share/man
prepend-path  LD_LIBRARY_PATH   $topdir/$version/lib
