#%Module1.0#####################################################################

set     topdir       /data/apps/tbb
set     version      "4.1"
set     libs         $topdir/$version/toolkit/lib64:$topdir/$version/toolkit/lib
module-whatis        "loads tbb version $version"

setenv       TBBROOT         $topdir/$version
prepend-path CPATH           $topdir/$version/include
prepend-path LD_LIBRARY_PATH $topdir/$version/lib/release
prepend-path LD_LIBRARY_PATH $topdir/$version/lib/debug
prepend-path LIBRARY_PATH    $topdir/$version/lib/release
prepend-path LIBRARHY_PATH   $topdir/$version/lib/debug
