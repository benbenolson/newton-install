#%Module1.0#####################################################################
##
## perlmodules modulefile
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads miscellaneous Perl modules\n"
}

module-whatis   "loads Perl modules into the working environment."

# for Tcl script use only
set     topdir       /data/apps/perlmodules
set     version      "5.8.8"

prepend-path PATH $topdir/bin
prepend-path PERL5LIB $topdir/lib/perl5/site_perl/5.8.8
prepend-path PERL5LIB $topdir/lib64/perl5/site_perl/5.8.8/x86_64-linux-thread-multi/
prepend-path MANPATH $topdir/share/man

