#%Module1.0#####################################################################

proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads globus"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"loads globus into the working environment."

# for Tcl script use only
set     topdir       /data/apps/globus
set     version      "5.2.2"

prepend-path  INCLUDE           $topdir/$version/include
prepend-path  LD_RUN_PATH       $topdir/$version/lib64
prepend-path  LD_LIBRARY_PATH   $topdir/$version/lib64
prepend-path  PATH              $topdir/$version/bin:$topdir/$version/sbin
prepend-path  PERL5LIB          $topdir/$version/lib/perl
prepend-path  MANPATH           $topdir/$version/share/man
setenv        GLOBUS_LOCATION   $topdir/$version
setenv        GRID_SECURITY_DIR $topdir/$version/etc/grid-security

